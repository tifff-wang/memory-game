{
  "name": "memory",
  "version": "0.2.0",
  "description": "An exercise to practice React state in components",
  "repository": "https://github.com/dev-academy-challenges/memory.git",
  "main": "server/index.ts",
  "scripts": {
    "start": "run-p client:build server",
    "dev": "run-p client:watch server",
    "webpack": "webpack --config ./client/webpack.config.js",
    "client:watch": "npm run webpack -- --watch",
    "client:build": "npm run webpack -- --mode production",
    "server": "ts-node server",
    "test": "jest --noStackTrace",
    "lint": "eslint ."
  },
  "author": "Dev Academy Aotearoa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-academy-challenges/memory/issues"
  },
  "homepage": "https://github.com/dev-academy-challenges/memory",
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.17.12",
    "@devacademy/eslint-config": "^1.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "babel-jest": "^29.2.2",
    "babel-loader": "^8.2.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^29.2.2",
